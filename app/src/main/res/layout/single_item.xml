<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="movie"
            type="com.example.marcinwisniewski.intive_training_app.model.Movie" />
        <variable
            name="listViewModel"
            type="com.example.marcinwisniewski.intive_training_app.vievmodel.ListViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/original_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="@{movie.title}" />
    </LinearLayout>
</layout>